
public class Solution {
	
public static void main(String[] args) {
	String s="my name is ganesh";
	char [] arr=s.toCharArray();
	//character 

	String[] sarr=s.split(" ");

	for(int i=0;i<sarr.length;i++)
	{
		if(sarr[i]==' ')
		{
			char  sample=sarr[i+1];
			sample=Character.toUpperCase();
			sarr[i+1]=sample;	
		}

	}
}
	

}
